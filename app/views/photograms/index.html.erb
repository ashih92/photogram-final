<div>
  <div>
    <h1>
      List of all photograms
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photogram
    </h2>

    <form action="/insert_photogram" method="post">
      <div>
        <label for="user_box">
          User
        </label>

        <input type="text" id="user_box" name="query_user">
      </div>

      <div>
        <label for="comment_box">
          Comment
        </label>

        <textarea id="comment_box" name="query_comment" rows="3"></textarea>
      </div>

      <div>
        <label for="follow_request_box">
          Follow request
        </label>

        <input type="text" id="follow_request_box" name="query_follow_request">
      </div>

      <div>
        <label for="like_box">
          Like
        </label>

        <input type="text" id="like_box" name="query_like">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <button>
        Create photogram
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Comment
        </th>

        <th>
          Follow request
        </th>

        <th>
          Like
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photograms.each do |a_photogram| %>
      <tr>
        <td>
          <%= a_photogram.id %>
        </td>

        <td>
          <%= a_photogram.user %>
        </td>

        <td>
          <%= a_photogram.comment %>
        </td>

        <td>
          <%= a_photogram.follow_request %>
        </td>

        <td>
          <%= a_photogram.like %>
        </td>

        <td>
          <%= a_photogram.photo %>
        </td>

        <td>
          <%= time_ago_in_words(a_photogram.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photogram.updated_at) %> ago
        </td>

        <td>
          <a href="/photograms/<%= a_photogram.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
